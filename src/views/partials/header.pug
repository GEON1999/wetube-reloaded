header  
    a(href="/").header__logo
        i.fab.fa-youtube 
        span.header__name Youtube
    nav 
        ul  
            li 
                a(href="/search") 
                    i.fas.fa-search               
            if !loggedIn
                li 
                    a(href="/login") Login  
                li 
                    a(href="/join").header__btn Join       
            else 
                li 
                    a(href="/videos/upload") Upload Video                                      
                li 
                    a(href="/user/edit-profile") Edit profile    
                li 
                    a(href="/user/logout") Logout    
                li  
                     a(href=`/user/${loggedInUser._id}`)
                        if !loggedInUser.avatarUrl
                            img.header__avatar(src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcR3MAdEhs1pDTSXdLl7RZn9t_WwnWNwsnt5ZA&usqp=CAU")  
                        else
                            img.header__avatar(src=`${loggedInUser.avatarUrl}` crossorigin) 