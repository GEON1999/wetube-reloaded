extends base

block content 
    div#videoContainer
        video(src="/" + video.fileUrl, controls)
        div#videoControls    
            button#play Play 
            button#mute Mute 
            input(type="range", step="0.1", value=0.5,  min="0", max="1")#volume
            div 
                span#currenTime 00:00
                span  /
                span#totalTime 
            div
                input(type="range", step="0.1", value=0,  min="0")#timeLine
            div 
                button#fullScreen Enter Fullscreen
    //-
        div
            p=video.description
            small=video.createdAt
        div 
            small Uploaded by    
                a(href=`/user/${video.owner._id}`)=video.owner.name
        if loggedInUser && (String(video.owner._id) === loggedInUser._id)
            a(href=`${video.id}/edit`) Edit video &rarr;
            br
            a(href=`${video.id}/delete`) Delete video &rarr;

block scripts
    script(src="/assets/js/videoPlayer.js")
