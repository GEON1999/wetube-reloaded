doctype html
html(lang="ko")
    head
        title #{pageName} | #{siteName} 
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
    body 
        header  
            h1=pageName 
            nav 
                ul 
                    li 
                        a(href="/") Home    
                    li 
                        a(href="/search") Search    
                    if !loggedIn
                        li 
                            a(href="/join") Join
                        li 
                            a(href="/login") Login  
                    else 
                        li 
                            a(href="/user/edit-profile") Edit profile
                        li 
                            a(href="/videos/upload") Upload Video    
                        li 
                            a(href="/user/logout") Logout     
                        li  
                            a(href="/my-profile") #{loggedInUser.name}'s Profile                                       
        main  
            block content                
    include partials/footer.pug